<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Food Plate Analysis</title>
  <link rel="stylesheet" href="/styles/foodplate.css">
  <script defer>
    document.addEventListener("DOMContentLoaded", function () {
      const form = document.querySelector("form");
      const loadingMessage = document.getElementById("loading-message");
      const resultContainer = document.getElementById("result-container");
      const errorMessage = document.getElementById("error-message");

      form.addEventListener("submit", function () {
        // Show the loading message & hide results
        loadingMessage.style.display = "block";
        resultContainer.style.display = "none";
        errorMessage.style.display = "none";

        // Disable form inputs & button to prevent resubmission
        form.querySelectorAll("input, select, button").forEach((el) => {
          el.setAttribute("disabled", "true");
        });
      });

      // If results exist, show them & hide loader
      if (resultContainer.innerHTML.trim() !== "") {
        loadingMessage.style.display = "none";
        resultContainer.style.display = "block";
      }
    });
  </script>
</head>
<body>
  <%- include("./partials/header.ejs") -%>

  <main>
    <h1>Upload an image URL to analyze your food plate</h1>

    <!-- Food Plate Form -->
    <form method="POST" action="/analyzefoodplate">
      <label for="imageUrl">Image URL:</label>
      <input type="text" id="imageUrl" name="imageUrl" placeholder="Enter Image URL..." required>
      
      <label for="language">Language:</label>
      <select id="language" name="language">
        <option value="en" selected>English</option>
        <option value="es">Spanish</option>
        <option value="tr">Turkish</option>
      </select>

      <button type="submit">Analyze</button>
    </form>

    <!-- Loading Message -->
    <p id="loading-message" class="<%= status === 'loading' ? '' : 'hide' %>">
      üîÑ Processing your food plate... Please wait.
    </p>

    <!-- Error Message -->
    <p id="error-message" class="<%= status === 'error' ? '' : 'hide' %>">
      ‚ùå An error occurred. Please try again.
    </p>

    <!-- Display API Results -->
    <div id="result-container" class="<%= status === 'done' ? '' : 'hide' %>">
      <% if (data && data.result) { %>
        <h2>Food Analysis Results</h2>
        <h3>Foods Identified:</h3>
        <ul>
          <% data.result.foods_identified.forEach(food => { %>
            <li><%= food %></li>
          <% }); %>
        </ul>

        <h3>Portion Sizes:</h3>
        <ul>
          <% Object.keys(data.result.portion_sizes).forEach(food => { %>
            <li><%= food %>: <%= data.result.portion_sizes[food] %></li>
          <% }); %>
        </ul>

        <h3>Estimated Calories:</h3>
        <p><%= data.result.estimated_calories %> kcal</p>

        <h3>Macronutrients:</h3>
        <p>Protein: <%= data.result.macronutrients.protein %></p>
        <p>Carbs: <%= data.result.macronutrients.carbs %></p>
        <p>Fats: <%= data.result.macronutrients.fats %></p>

        <h3>Meal Balance:</h3>
        <p><%= data.result.meal_balance %></p>

        <h3>Suggestions:</h3>
        <ul>
          <% data.result.suggestions.forEach(suggestion => { %>
            <li><%= suggestion %></li>
          <% }); %>
        </ul>
      <% } else { %>
        <p class="error">No analysis results found. Try again.</p>
      <% } %>
    </div>
  </main>

  <%- include("./partials/footer.ejs") -%>

  <style>
    .hide {
      display: none;
    }
  </style>
</body>
</html>
